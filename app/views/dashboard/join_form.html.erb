<!-- Validation failure messages -->
<% if @player.errors.any? %>
<% @player.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Join Table</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/join_table" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="id" class="control-label">
          Table ID
        </label>

        <input type="text" id="id" name="id" placeholder="Table ID" class="form-control">
      </div>

      <!-- Label and input for table password -->
      <div class="form-group">
        <label for="password" class="control-label">
          Table Password
        </label>

        <input type="text" id="password" name="password" placeholder="Table Password" class="form-control">
      </div>

      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Join Table
      </button>
      or
      <a href="/">Cancel</a>
    </form>
  </div>
</div>
